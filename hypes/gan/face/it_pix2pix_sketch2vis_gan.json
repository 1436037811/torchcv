{
    "dataset": "face",
    "task": "gan",
    "method": "image_translator",
    "data": {
      "data_dir": "~/DataSet/Sketch2VIS",
      "image_tool": "cv2",
      "input_mode": "BGR",
      "workers": 8,
      "mean_value": [128, 128, 128],
      "normalize": {
        "div_value": 255,
        "mean": [0.5, 0.5, 0.5],
        "std": [0.5, 0.5, 0.5]
      }
    },
    "train": {
      "loader": "default",
      "batch_size": 1,
      "aug_trans": {
        "trans_seq": ["random_hflip", "random_crop"],
        "random_hflip": {
          "ratio": 0.5,
          "swap_pair": []
        },
        "random_crop": {
          "ratio": 1.0,
          "crop_size": [128, 128],
          "method": "random",
          "allow_outside_center": false
        }
      },
      "data_transformer": {
        "size_mode": "none",
        "input_size": [128, 128],
        "align_method": "only_pad"
      }
    },
    "val": {
      "loader": "default",
      "batch_size": 1,
      "aug_trans": {
        "trans_seq": ["random_crop"],
        "random_crop": {
          "ratio": 1.0,
          "crop_size": [128, 128],
          "method": "center",
          "allow_outside_center": false
        }
      },
      "data_transformer": {
        "size_mode": "none",
        "input_size": [128, 128],
        "align_method": "only_scale"
      }
    },
    "test": {
      "batch_size": 1,
      "aug_trans": {
        "trans_seq": ["random_crop"],
        "random_crop": {
          "ratio": 1.0,
          "crop_size": [128, 128],
          "method": "center",
          "allow_outside_center": false
        }
      },
      "data_transformer": {
        "size_mode": "none",
        "samples_per_gpu": 1
      }
    },
    "network": {
      "generator": {
        "net_type": "unet_256",
        "init_type": "normal",
        "init_gain": 0.02,
        "in_c": 3,
        "out_c": 3,
        "num_f": 64
      },
      "discriminator": {
        "net_type": "n_layers",
        "init_type": "normal",
        "init_gain": 0.02,
        "n_layers": 3,
        "num_f": 64,
        "in_c": 3
      },
      "use_dropout": false,
      "norm_type": "batchnorm",
      "model_name": "face_gan",
      "checkpoints_name": "it_pix2pix_sketch2vis_gan",
      "checkpoints_dir": "checkpoints/gan/face",
      "imgpool_size": 0
    },
    "logging": {
      "logfile_level": "info",
      "stdout_level": "info",
      "log_file": "./log/gan/it_pix2pix_sketch2vis_gan.log",
      "log_format": "%(asctime)s %(levelname)-7s %(message)s",
      "rewrite": true
    },
    "solver": {
      "lr": {
        "metric": "epoch",
        "base_lr": 0.0002,
        "lr_policy": "lambda_fixlinear",
        "lambda_fixlinear": {
          "fix_value": 100,
          "linear_value": 100
        }
      },
      "optim": {
        "optim_method": "adam",
        "adam": {
          "betas": [0.5, 0.999],
          "eps": 1e-08,
          "weight_decay": 0.0
        }
      },
      "display_iter": 100,
      "save_iters": 5000,
      "test_interval": 5000,
      "max_epoch": 200
    },
    "loss": {
      "loss_weights": {
        "l1_loss": 100.0,
        "gan_loss": 1.0
      },
      "params": {
        "gan_mode": "vanilla"
      }
    }
}

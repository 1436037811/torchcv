{
    "dataset": "face",
    "task": "gan",
    "method": "face_gan",
    "data": {
      "num_classes": 21,
      "data_dir": "~/DataSet/CASIA_NIR-VIS2.0",
      "image_tool": "cv2",
      "input_mode": "BGR",
      "keep_difficult": false,
      "workers": 8,
      "mean_value": [128, 128, 128],
      "normalize": {
        "div_value": 255,
        "mean": [0.5, 0.5, 0.5],
        "std": [0.5, 0.5, 0.5]
      }
    },
    "train": {
      "batch_size": 128,
      "aug_trans": {
        "trans_seq": ["random_hflip", "random_crop"],
        "random_hflip": {
          "ratio": 0.5,
          "swap_pair": []
        },
        "random_crop": {
          "ratio": 1.0,
          "crop_size": [128, 128],
          "method": "random",
          "allow_outside_center": false
        }
      },
      "data_transformer": {
        "size_mode": "none",
        "input_size": [32, 32],
        "align_method": "only_pad"
      }
    },
    "val": {
      "batch_size": 32,
      "use_07_metric": true,
      "aug_trans": {
        "trans_seq": []
      },
      "data_transformer": {
        "size_mode": "fix_size",
        "input_size": [300, 300],
        "align_method": "only_scale"
      }
    },
    "test": {
      "input_size": [300, 300],
      "scale_search": [1.0]
    },
    "network":{
      "backbone": "vgg16",
      "model_name": "vgg300_ssd",
      "num_feature_list": [512, 1024, 512, 256, 256, 256],
      "stride_list": [8, 16, 30, 60, 100, 300],
      "head_index_list": [0, 1, 2, 3, 4, 5],
      "checkpoints_name": "ssd_vgg300_voc_det",
      "checkpoints_dir": "checkpoints/det/voc"
    },
    "logging": {
      "logfile_level": "info",
      "stdout_level": "info",
      "log_file": "./log/det/ssd_vgg300_voc_det.log",
      "log_format": "%(asctime)s %(levelname)-7s %(message)s",
      "rewrite": true
    },
    "solver": {
      "lr": {
        "metric": "epoch",
        "is_warm": true,
        "warm": {
          "warm_epoch": 6,
          "freeze_backbone": false
        },
        "base_lr": 0.004,
        "lr_policy": "multistep",
        "multistep": {
          "gamma": 0.1,
          "stepvalue": [156, 195, 234]
        }
      },
      "optim": {
        "optim_method": "adam",
        "adam": {
          "betas": [0.9, 0.999],
          "eps": 1e-08,
          "weight_decay": 0.0001
        }
      },
      "display_iter": 100,
      "save_iters": 5000,
      "test_interval": 5000,
      "max_epoch": 235
    },
    "res": {
      "nms": {
        "mode": "union",
        "max_threshold": 0.45,
        "pre_nms": 1000
      },
      "val_conf_thre": 0.01,
      "vis_conf_thre": 0.5,
      "max_per_image": 200,
      "cls_keep_num": 50
    },
    "loss": {
      "use_lsgan": true
    }
}
